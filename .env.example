# API Keys
XAI_API_KEY=your-xai-api-key-here  # xAI API key for Grok models
OPENROUTER_API_KEY=your-openrouter-api-key-here  # OpenRouter API key
ANTHROPIC_API_KEY=your-anthropic-api-key-here  # Optional: Anthropic API key

# LLM Backend
BACKEND=openrouter  # Backend: openrouter | xai | anthropic
MODEL=x-ai/grok-4.1-fast  # Model selection
FORCE_GROK_FAST=1  # Force premium Grok to use fast variant

# Reasoning
REASONING_EFFORT=high  # OpenRouter reasoning: high | medium | low | minimal | none
REASONING_EXCLUDE=0  # Exclude reasoning from response: 0 (include) | 1 (exclude)

# Context & Compression
CONTEXT_CHAR_BUDGET=6000  # Total context characters
CONTEXT_SECTION_BUDGET=2000  # Per-section context characters
ENABLE_CONTEXT_COMPRESSION=1  # Enable token-based compression
CONTEXT_T_MAX=250000  # Trigger compression at this token count
CONTEXT_T_RETAINED=100000  # Target size after compression
USE_CONSOLIDATED_TOOLS=0  # Use 5 consolidated tools instead of 15+

# Timeouts
CONTRACT_TIMEOUT_SECONDS=7200  # Per-contract timeout (2 hours)
AGENT_MAX_SECONDS=1800  # Max specialist execution time (30 min)
AGENT_MAX_ITERATIONS=100  # Max specialist iterations
ORCHESTRATOR_TIMEOUT_SECONDS=7200  # Orchestrator timeout
BUNDLE_TIMEOUT_SECONDS=28800  # Bundle timeout for multi-contract projects (8 hours)

# Verification
VERIFICATION_HYPOTHESIS_LIMIT=20  # Max hypotheses to verify per contract
VERIFICATION_CONTRACT_TIMEOUT=600  # Total verification time per contract
VERIFICATION_WORKERS=1  # Parallel verification workers (0=auto)
ENSEMBLE_CORROBORATION_REQUIRED=1  # Require ensemble corroboration

# Attack Layer
MAX_HYPOTHESES=500  # Max hypotheses before pruning
HYPOTHESIS_BUDGET=12  # Hypothesis budget per attacker
COVERAGE_FLOOR=0.35  # Minimum code coverage
ATTACK_WORKERS=0  # Parallel attack workers (0=auto)

# PoC Generation
POC_GEN_MODE=ai  # PoC mode: ai | template | hybrid | auto
POC_SHRINK=0  # Enable PoC shrinking
POC_CONTEXT_CHARS=20000  # PoC context characters
POC_PARALLEL_WORKERS=8  # Parallel PoC workers
ETH_RPC_URL=http://localhost:8545  # Ethereum RPC for fork testing

# Feature Flags
OFFLINE_MODE=0  # Disable LLM, use templates only
FRESH_ANALYSIS=0  # Skip KB bootstrap for thorough analysis
ENABLE_ECON_SIM=1  # Enable economic simulator
ENABLE_INVARIANT_FUZZ_RUN=0  # Enable invariant fuzzing
ENABLE_ADVERSARIAL_ENGINE=0  # Enable Foundry harness runner
ENABLE_PATTERN_SYNTHESIS=0  # Enable KB pattern synthesis

# Knowledge Base
KB_MODE=observe  # KB mode: observe | rerank | enrich
KB_SUGGESTIONS_ADDITIVE=1  # Merge KB suggestions with fresh analysis
KB_EXPLORATION_FRACTION=0.25  # Randomness in KB selection

# CAL Layer
SLITHER_TIMEOUT=180  # Slither timeout in seconds
DEDUP_MODE=exact  # Deduplication: off | exact | hints
SEMANTIC_BACKEND=keyword  # Semantic search: keyword | auto | faiss | chroma

# Logging
DEBUG_LLM=0  # Debug LLM API calls
LOG_AI_CALLS_LIMIT=200  # Limit AI call logging
